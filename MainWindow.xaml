<Window x:Class="Blackjack_Starter.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="MainWindow" Height="450" Width="800">
 
    <Grid>
        
        <WrapPanel Name="DealerPanel" VerticalAlignment="Top" HorizontalAlignment="Left" Width="800" Height="180"  >

        </WrapPanel>

        <WrapPanel VerticalAlignment="Center" HorizontalAlignment="Left" Margin="280,0,0,0">
            <Button Content="Hit" Width="100" Height="50" Margin="10" Click="Hit_Click"/>
            <Button Content="Stand" Width="100" Height="50" Margin="10" Click="Stand_Click"/>
        </WrapPanel>

        <WrapPanel Name="PlayerPanel" VerticalAlignment="Bottom" HorizontalAlignment="Left" Width="800" Height="180" >

        </WrapPanel>
    </Grid>
</Window>
